            <View style="@style/MyItemDeliver" />

            <LinearLayout
                android:id="@+id/mMessage"
                style="@style/MyItem" >

                <ImageView
                    style="@style/MyItemImg"
                    android:contentDescription="@null"
                    android:src="@mipmap/my_pingjia" />

                <TextView
                    style="@style/MyItemTxt1"
                    android:text="我的收藏" />

                <ImageView
